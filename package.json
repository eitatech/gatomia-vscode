    "views": {
      "gatomia": [
        {
          "id": "gatomia.views.specExplorer",
          "name": "Specs",
          "icon": "symbol-structure",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.gatomia.views.specs.visible"
        },
        {
          "id": "gatomia.views.promptsExplorer",
          "name": "Prompts",
          "icon": "terminal",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.gatomia.views.prompts.visible"
        },
        {
          "id": "gatomia.views.steeringExplorer",
          "name": "Steering",
          "icon": "symbol-parameter",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.gatomia.views.steering.visible"
        },
        {
          "id": "gatomia.views.hooksExplorer",
          "name": "Hooks",
          "icon": "plug",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.gatomia.views.hooks.visible"
        },
        {
          "id": "gatomia.views.overview",
          "name": "Quick Access",
          "icon": "zap",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.gatomia.views.quickAccess.visible"
        }
      ]
    },
