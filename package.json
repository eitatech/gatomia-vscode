{
  "name": "kiro-for-codex-ide",
  "displayName": "OpenSpec for Copilot",
  "description": "Spec-driven development with Codex CLI - inspired by Kiro",
  "version": "0.1.6",
  "author": "atman-33",
  "publisher": "atman-dev",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/atman-33/kiro-for-codex-ide"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "dist/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "build-prompts": "node scripts/build-prompts.js",
    "build:ext": "esbuild src/extension.ts --bundle --platform=node --target=node16 --external:vscode --outfile=dist/extension.js",
    "build": "npm run build-prompts && npm run build:ext && npm run build:webview",
    "vscode:prepublish": "npm run build",
    "compile": "npm run build && npm run package",
    "watch": "concurrently \"tsc -w -p ./\" \"npm:watch:webview\"",
    "package": "vsce package",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "check": "ultracite check",
    "test": "vitest --pool threads --run",
    "test:watch": "vitest --pool threads --watch",
    "test:coverage": "vitest --pool threads --coverage",
    "prepare": "husky",
    "--- WEBVIEW ---": "--- --- --- --- ---",
    "build:webview": "npm --prefix webview-ui run build",
    "watch:webview": "npm --prefix webview-ui run dev"
  },
  "contributes": {
    "configuration": {
      "title": "OpenSpec for Copilot",
      "properties": {
        "kiro-codex-ide.views.specs.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Specs view in the activity bar."
        },
        "kiro-codex-ide.views.steering.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Steering view in the activity bar."
        },
        "kiro-codex-ide.views.prompts.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Prompts view in the activity bar."
        },
        "kiro-codex-ide.views.settings.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Settings view in the activity bar."
        },
        "kiro-codex-ide.codex.specsPath": {
          "type": "string",
          "default": "openspec",
          "description": "Path where Codex specification files are stored."
        },
        "kiro-codex-ide.codex.promptsPath": {
          "type": "string",
          "default": ".github/prompts",
          "description": "Path where Codex prompt files are stored."
        },
        "kiro-codex-ide.codex.steeringPath": {
          "type": "string",
          "default": ".codex/steering",
          "description": "Path where Codex steering documents are stored."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiro-codex-ide",
          "title": "OpenSpec for Copilot",
          "icon": "./icons/kiro.svg"
        }
      ]
    },
    "views": {
      "kiro-codex-ide": [
        {
          "id": "kiro-codex-ide.views.specExplorer",
          "name": "Specs",
          "icon": "symbol-structure",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.kiro-codex-ide.views.specs.visible"
        },
        {
          "id": "kiro-codex-ide.views.steeringExplorer",
          "name": "Steering",
          "icon": "symbol-parameter",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.kiro-codex-ide.views.steering.visible"
        },
        {
          "id": "kiro-codex-ide.views.promptsExplorer",
          "name": "Prompts",
          "icon": "terminal",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.kiro-codex-ide.views.prompts.visible"
        },
        {
          "id": "kiro-codex-ide.views.overview",
          "name": "Settings",
          "icon": "gear",
          "visibility": "collapsed",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.kiro-codex-ide.views.settings.visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kiro-codex-ide.views.specExplorer",
        "contents": "Plan features with Specs\n\n[$(plus) Create New Spec](command:kiro-codex-ide.spec.create)"
      },
      {
        "view": "kiro-codex-ide.views.steeringExplorer",
        "contents": "[$(globe) Create User Rule](command:kiro-codex-ide.steering.createUserRule)\n\n[$(root-folder) Create Project Rule](command:kiro-codex-ide.steering.createProjectRule)"
      },
      {
        "view": "kiro-codex-ide.views.promptsExplorer",
        "contents": "Create and run prompts (.md) under .codex/prompts\n\n[$(plus) Create Prompt](command:kiro-codex-ide.prompts.create)\n[$(refresh) Refresh](command:kiro-codex-ide.prompts.refresh)"
      },
      {
        "view": "kiro-codex-ide.views.overview",
        "contents": "Configure OpenSpec for Copilot\n\n[$(gear) Open Settings](command:kiro-codex-ide.settings.open)\n[$(file-text) Open MCP Config (mcp.json)](command:kiro-codex-ide.settings.openGlobalConfig)\n[$(question) Help](command:kiro-codex-ide.help.open)"
      }
    ],
    "commands": [
      {
        "command": "kiro-codex-ide.spec.create",
        "title": "Create New Spec",
        "category": "OpenSpec for Copilot",
        "icon": "$(plus)"
      },
      {
        "command": "kiro-codex-ide.spec.refresh",
        "title": "Refresh Specs",
        "category": "OpenSpec for Copilot",
        "icon": "$(refresh)"
      },
      {
        "command": "kiro-codex-ide.spec.delete",
        "title": "Delete Spec",
        "category": "OpenSpec for Copilot",
        "icon": "$(trash)"
      },
      {
        "command": "kiro-codex-ide.spec.archiveChange",
        "title": "Archive Change",
        "category": "OpenSpec for Copilot",
        "icon": "$(archive)"
      },
      {
        "command": "kiro-codex-ide.spec.implTask",
        "title": "Implement Task",
        "category": "OpenSpec for Copilot"
      },
      {
        "command": "kiro-codex-ide.steering.refine",
        "title": "Refine Steering",
        "category": "OpenSpec for Copilot",
        "icon": "$(sparkle)"
      },
      {
        "command": "kiro-codex-ide.steering.delete",
        "title": "Delete Steering",
        "category": "OpenSpec for Copilot",
        "icon": "$(trash)"
      },
      {
        "command": "kiro-codex-ide.steering.refresh",
        "title": "Refresh Steering",
        "category": "OpenSpec for Copilot",
        "icon": "$(refresh)"
      },
      {
        "command": "kiro-codex-ide.steering.createUserRule",
        "title": "Create User Rule",
        "category": "OpenSpec for Copilot",
        "icon": "$(globe)"
      },
      {
        "command": "kiro-codex-ide.steering.createProjectRule",
        "title": "Create Project Rule",
        "category": "OpenSpec for Copilot",
        "icon": "$(root-folder)"
      },
      {
        "command": "kiro-codex-ide.prompts.create",
        "title": "Create Prompt",
        "category": "OpenSpec for Copilot",
        "icon": "$(plus)"
      },
      {
        "command": "kiro-codex-ide.prompts.refresh",
        "title": "Refresh Prompts",
        "category": "OpenSpec for Copilot",
        "icon": "$(refresh)"
      },
      {
        "command": "kiro-codex-ide.prompts.run",
        "title": "Run Prompt",
        "category": "OpenSpec for Copilot",
        "icon": "$(play)"
      },
      {
        "command": "kiro-codex-ide.prompts.delete",
        "title": "Delete Prompt",
        "category": "OpenSpec for Copilot",
        "icon": "$(trash)"
      },
      {
        "command": "kiro-codex-ide.settings.open",
        "title": "OpenSpec Settings",
        "category": "OpenSpec for Copilot",
        "icon": "$(gear)"
      },
      {
        "command": "kiro-codex-ide.settings.openGlobalConfig",
        "title": "Open MCP Config (mcp.json)",
        "category": "OpenSpec for Copilot",
        "icon": "$(file-text)"
      },
      {
        "command": "kiroCodex.help.open",
        "title": "OpenSpec Help",
        "category": "OpenSpec for Copilot",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kiro-codex-ide.spec.create",
          "when": "view == kiro-codex-ide.views.specExplorer",
          "group": "navigation@1"
        },
        {
          "command": "kiro-codex-ide.spec.refresh",
          "when": "view == kiro-codex-ide.views.specExplorer",
          "group": "navigation@2"
        },
        {
          "command": "kiro-codex-ide.steering.refresh",
          "when": "view == kiro-codex-ide.views.steeringExplorer",
          "group": "navigation@3"
        },
        {
          "command": "kiro-codex-ide.prompts.refresh",
          "when": "view == kiro-codex-ide.views.promptsExplorer",
          "group": "navigation@2"
        },
        {
          "command": "kiro-codex-ide.settings.openGlobalConfig",
          "when": "view == kiro-codex-ide.views.overview",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "kiro-codex-ide.spec.delete",
          "when": "view == kiro-codex-ide.views.specExplorer && viewItem == spec",
          "group": "7_modification"
        },
        {
          "command": "kiro-codex-ide.spec.archiveChange",
          "when": "view == kiro-codex-ide.views.specExplorer && viewItem == change",
          "group": "7_modification"
        },
        {
          "command": "kiro-codex-ide.prompts.create",
          "when": "view == kiro-codex-ide.views.promptsExplorer && viewItem == prompt-group-project",
          "group": "inline"
        },
        {
          "command": "kiro-codex-ide.prompts.create",
          "when": "view == kiro-codex-ide.views.promptsExplorer && viewItem == prompt-group-global",
          "group": "inline"
        },
        {
          "command": "kiro-codex-ide.prompts.run",
          "when": "view == kiro-codex-ide.views.promptsExplorer && viewItem == prompt-runnable",
          "group": "inline"
        },
        {
          "command": "kiro-codex-ide.prompts.delete",
          "when": "view == kiro-codex-ide.views.promptsExplorer && (viewItem == prompt || viewItem == prompt-runnable)",
          "group": "7_modification"
        },
        {
          "command": "kiro-codex-ide.steering.refine",
          "when": "view == kiro-codex-ide.views.steeringExplorer && viewItem == steering-document",
          "group": "inline"
        },
        {
          "command": "kiro-codex-ide.steering.delete",
          "when": "view == kiro-codex-ide.views.steeringExplorer && viewItem == steering-document",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "kiro-codex-ide.spec.create"
        },
        {
          "command": "kiro-codex-ide.steering.refresh"
        },
        {
          "command": "kiro-codex-ide.prompts.create",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "kiro-codex-ide.settings.openGlobalConfig"
        }
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@jest/globals": "^29.7.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.84.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "esbuild": "^0.23.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "ultracite": "^6.3.4",
    "vitest": "^3.2.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8"
  }
}
