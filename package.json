{
  "name": "gatomia",
  "displayName": "GatomIA",
  "description": "Agentic Spec-Driven Development Toolkit",
  "version": "0.27.1",
  "license": "MIT",
  "author": "Italo A. G.",
  "publisher": "EITA",
  "icon": "assets/icons/gatomia.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eitatech/gatomia-vscode"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "dist/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "install:all": "npm install && cd ui && npm install",
    "build-prompts": "node scripts/build-prompts.js",
    "build:ext": "esbuild src/extension.ts --bundle --platform=node --target=node16 --external:vscode --outfile=dist/extension.js",
    "build": "npm run build-prompts && npm run build:ext && npm run build:webview",
    "vscode:prepublish": "npm run build",
    "compile": "npm run build && npm run package",
    "watch": "concurrently \"tsc -w -p ./\" \"npm run watch:webview\"",
    "package": "vsce package",
    "lint": "ultracite lint",
    "fix": "ultracite fix",
    "format": "ultracite format",
    "check": "ultracite check",
    "test": "vitest --pool threads --run",
    "test:watch": "vitest --pool threads --watch",
    "test:coverage": "vitest --pool threads --coverage",
    "prepare": "husky",
    "build:webview": "npm --prefix ui run build",
    "watch:webview": "npm --prefix ui run dev"
  },
  "contributes": {
    "configuration": {
      "title": "GatomIA",
      "properties": {
        "gatomia.views.specs.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Specs view in the activity bar."
        },
        "gatomia.views.prompts.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Prompts view in the activity bar."
        },
        "gatomia.views.steering.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Steering view in the activity bar."
        },
        "gatomia.views.hooks.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Hooks view in the activity bar."
        },
        "gatomia.views.quickAccess.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Quick Access view in the activity bar."
        },
        "gatomia.copilot.specsPath": {
          "type": "string",
          "default": "speckit",
          "description": "Path where Copilot specification files are stored.",
          "order": 1
        },
        "gatomia.copilot.promptsPath": {
          "type": "string",
          "default": ".github/prompts",
          "description": "Path where Copilot prompt files are stored.",
          "order": 2
        },
        "gatomia.specSystem": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "openspec",
            "speckit"
          ],
          "description": "The Spec System to use (OpenSpec or SpecKit).",
          "order": 3
        },
        "gatomia.chatLanguage": {
          "type": "string",
          "default": "English",
          "enum": [
            "English",
            "Japanese",
            "Spanish",
            "French",
            "German",
            "Chinese (Simplified)",
            "Chinese (Traditional)",
            "Italian",
            "Portuguese (Brazil)",
            "Korean",
            "Russian"
          ],
          "description": "The language GitHub Copilot should use for responses.",
          "order": 3
        },
        "gatomia.customInstructions.global": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Global custom instructions appended to all prompts.",
          "order": 4
        },
        "gatomia.customInstructions.createSpec": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when creating a spec.",
          "order": 5
        },
        "gatomia.customInstructions.startAllTask": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when starting all tasks.",
          "order": 6
        },
        "gatomia.customInstructions.runPrompt": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when running a prompt.",
          "order": 7
        },
        "gatomia.speckit.specsPath": {
          "type": "string",
          "default": "specs",
          "description": "Path where SpecKit specification files are stored.",
          "order": 8
        },
        "gatomia.speckit.memoryPath": {
          "type": "string",
          "default": ".specify/memory",
          "description": "Path where SpecKit memory files are stored.",
          "order": 9
        },
        "gatomia.speckit.templatesPath": {
          "type": "string",
          "default": ".specify/templates",
          "description": "Path where SpecKit template files are stored.",
          "order": 10
        },
        "gatomia.speckit.scriptsPath": {
          "type": "string",
          "default": ".specify/scripts",
          "description": "Path where SpecKit script files are stored.",
          "order": 11
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gatomia",
          "title": "GatomIA",
          "icon": "./assets/icons/gatomia.svg"
