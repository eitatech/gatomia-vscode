{
  "name": "alma",
  "displayName": "ALMA",
  "description": "Agentic Lifecycle Management Automation",
  "version": "0.10.0",
  "license": "MIT",
  "author": "Italo A. G.",
  "publisher": "EITA",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eita/alma-vscode"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "dist/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "build-prompts": "node scripts/build-prompts.js",
    "build:ext": "esbuild src/extension.ts --bundle --platform=node --target=node16 --external:vscode --outfile=dist/extension.js",
    "build": "npm run build-prompts && npm run build:ext && npm run build:webview",
    "vscode:prepublish": "npm run build",
    "compile": "npm run build && npm run package",
    "watch": "concurrently \"tsc -w -p ./\" \"npm:watch:webview\"",
    "package": "vsce package",
    "lint": "ultracite lint",
    "fix": "ultracite fix",
    "format": "ultracite format",
    "check": "ultracite check",
    "test": "vitest --pool threads --run",
    "test:watch": "vitest --pool threads --watch",
    "test:coverage": "vitest --pool threads --coverage",
    "prepare": "husky",
    "--- WEBVIEW ---": "--- --- --- --- ---",
    "build:webview": "npm --prefix webview-ui run build",
    "watch:webview": "npm --prefix webview-ui run dev"
  },
  "contributes": {
    "configuration": {
      "title": "ALMA",
      "properties": {
        "alma.views.specs.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Specs view in the activity bar."
        },
        "alma.views.prompts.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Prompts view in the activity bar."
        },
        "alma.views.steering.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Steering view in the activity bar."
        },
        "alma.views.settings.visible": {
          "type": "boolean",
          "default": true,
          "description": "Controls visibility of the Settings view in the activity bar."
        },
        "alma.copilot.specsPath": {
          "type": "string",
          "default": "speckit",
          "description": "Path where Copilot specification files are stored.",
          "order": 1
        },
        "alma.copilot.promptsPath": {
          "type": "string",
          "default": ".github/prompts",
          "description": "Path where Copilot prompt files are stored.",
          "order": 2
        },
        "alma.specSystem": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "openspec",
            "speckit"
          ],
          "description": "The Spec System to use (OpenSpec or Spec-Kit).",
          "order": 3
        },
        "alma.chatLanguage": {
          "type": "string",
          "default": "English",
          "enum": [
            "English",
            "Japanese",
            "Spanish",
            "French",
            "German",
            "Chinese (Simplified)",
            "Chinese (Traditional)",
            "Italian",
            "Portuguese (Brazil)",
            "Korean",
            "Russian"
          ],
          "description": "The language GitHub Copilot should use for responses.",
          "order": 3
        },
        "alma.customInstructions.global": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Global custom instructions appended to all prompts.",
          "order": 4
        },
        "alma.customInstructions.createSpec": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when creating a spec.",
          "order": 5
        },
        "alma.customInstructions.startAllTask": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when starting all tasks.",
          "order": 6
        },
        "alma.customInstructions.runPrompt": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Custom instructions appended when running a prompt.",
          "order": 7
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "alma",
          "title": "ALMA",
          "icon": "./icons/alma.svg"
        }
      ]
    },
    "views": {
      "alma": [
        {
          "id": "alma.views.specExplorer",
          "name": "Specs",
          "icon": "symbol-structure",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.alma.views.specs.visible"
        },
        {
          "id": "alma.views.promptsExplorer",
          "name": "Prompts",
          "icon": "terminal",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.alma.views.prompts.visible"
        },
        {
          "id": "alma.views.steeringExplorer",
          "name": "Steering",
          "icon": "symbol-parameter",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.alma.views.steering.visible"
        },
        {
          "id": "alma.views.overview",
          "name": "Settings",
          "icon": "gear",
          "visibility": "collapsed",
          "when": "!(workbenchState == empty || workspaceFolderCount == 0) && config.alma.views.settings.visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "alma.views.specExplorer",
        "contents": "Plan features with Specs\n\n[$(plus) Create New Spec](command:alma.spec.create)"
      },
      {
        "view": "alma.views.promptsExplorer",
        "contents": "Create and run prompts (.md) under .github/prompts\n\n[$(refresh) Refresh](command:alma.prompts.refresh)"
      },
      {
        "view": "alma.views.steeringExplorer",
        "contents": "Manage steering rules for Copilot\n\n[$(root-folder) Create Project Rule](command:alma.steering.createProjectRule)\n[$(globe) Create User Rule](command:alma.steering.createUserRule)"
      },
      {
        "view": "alma.views.overview",
        "contents": "Configure ALMA\n\n[$(book) Install Spec Kit](command:alma.help.install)\n[$(gear) Open Settings](command:alma.settings.open)\n[$(file-text) Open MCP Config (mcp.json)](command:alma.settings.openGlobalConfig)\n[$(question) Help](command:alma.help.open)"
      }
    ],
    "commands": [
      {
        "command": "alma.spec.create",
        "title": "Create New Spec",
        "category": "ALMA",
        "icon": "$(plus)"
      },
      {
        "command": "alma.spec.refresh",
        "title": "Refresh Specs",
        "category": "ALMA",
        "icon": "$(refresh)"
      },
      {
        "command": "alma.spec.delete",
        "title": "Delete Spec",
        "category": "ALMA",
        "icon": "$(trash)"
      },
      {
        "command": "alma.spec.archiveChange",
        "title": "Archive Change",
        "category": "ALMA",
        "icon": "$(archive)"
      },
      {
        "command": "alma.spec.implTask",
        "title": "Implement Task",
        "category": "ALMA"
      },
      {
        "command": "alma.steering.refresh",
        "title": "Refresh Steering",
        "category": "ALMA",
        "icon": "$(refresh)"
      },
      {
        "command": "alma.steering.createUserRule",
        "title": "Create User Rule",
        "category": "ALMA",
        "icon": "$(globe)"
      },
      {
        "command": "alma.steering.createProjectRule",
        "title": "Create Project Rule",
        "category": "ALMA",
        "icon": "$(root-folder)"
      },
      {
        "command": "alma.prompts.create",
        "title": "Create Prompt",
        "category": "ALMA",
        "icon": "$(plus)"
      },
      {
        "command": "alma.prompts.createAgentFile",
        "title": "New Agent File",
        "category": "ALMA",
        "icon": "$(robot)"
      },
      {
        "command": "alma.prompts.createInstructions",
        "title": "New Instructions File",
        "category": "ALMA",
        "icon": "$(book)"
      },
      {
        "command": "alma.prompts.createCopilotPrompt",
        "title": "New Prompt File",
        "category": "ALMA",
        "icon": "$(sparkle)"
      },
      {
        "command": "alma.prompts.refresh",
        "title": "Refresh Prompts",
        "category": "ALMA",
        "icon": "$(refresh)"
      },
      {
        "command": "alma.prompts.run",
        "title": "Run Prompt",
        "category": "ALMA",
        "icon": "$(play)"
      },
      {
        "command": "alma.prompts.rename",
        "title": "Rename",
        "category": "ALMA",
        "icon": "$(edit)"
      },
      {
        "command": "alma.prompts.delete",
        "title": "Delete",
        "category": "ALMA",
        "icon": "$(trash)"
      },
      {
        "command": "alma.settings.open",
        "title": "ALMA Settings",
        "category": "ALMA",
        "icon": "$(gear)"
      },
      {
        "command": "alma.settings.openGlobalConfig",
        "title": "Open MCP Config (mcp.json)",
        "category": "ALMA",
        "icon": "$(file-text)"
      },
      {
        "command": "alma.settings.selectSpecSystem",
        "title": "Select Spec System",
        "category": "ALMA",
        "icon": "$(settings-gear)"
      },
      {
        "command": "alma.help.open",
        "title": "ALMA Help",
        "category": "ALMA",
        "icon": "$(question)"
      },
      {
        "command": "alma.speckit.constitution",
        "title": "Create Constitution",
        "category": "ALMA"
      },
      {
        "command": "alma.speckit.specify",
        "title": "Specify Feature",
        "category": "ALMA"
      },
      {
        "command": "alma.speckit.plan",
        "title": "Plan Feature",
        "category": "ALMA"
      },
      {
        "command": "alma.speckit.unit-test",
        "title": "Create Unit Tests",
        "category": "ALMA"
      },
      {
        "command": "alma.speckit.integration-test",
        "title": "Create Integration Tests",
        "category": "ALMA"
      },
      {
        "command": "alma.speckit.implementation",
        "title": "Implement Feature",
        "category": "ALMA"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "alma.spec.create",
          "when": "view == alma.views.specExplorer",
          "group": "navigation@1"
        },
        {
          "command": "alma.spec.refresh",
          "when": "view == alma.views.specExplorer",
          "group": "navigation@2"
        },
        {
          "command": "alma.steering.refresh",
          "when": "view == alma.views.steeringExplorer",
          "group": "navigation@3"
        },
        {
          "command": "alma.steering.createProjectRule",
          "when": "view == alma.views.steeringExplorer",
          "group": "navigation@1"
        },
        {
          "command": "alma.steering.createUserRule",
          "when": "view == alma.views.steeringExplorer",
          "group": "navigation@2"
        },
        {
          "command": "alma.prompts.createAgentFile",
          "when": "view == alma.views.promptsExplorer",
          "group": "navigation@1"
        },
        {
          "command": "alma.prompts.createInstructions",
          "when": "view == alma.views.promptsExplorer",
          "group": "navigation@2"
        },
        {
          "command": "alma.prompts.createCopilotPrompt",
          "when": "view == alma.views.promptsExplorer",
          "group": "navigation@3"
        },
        {
          "command": "alma.prompts.refresh",
          "when": "view == alma.views.promptsExplorer",
          "group": "navigation@4"
        },
        {
          "command": "alma.settings.openGlobalConfig",
          "when": "view == alma.views.overview",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "alma.spec.delete",
          "when": "view == alma.views.specExplorer && viewItem == spec",
          "group": "7_modification"
        },
        {
          "command": "alma.spec.archiveChange",
          "when": "view == alma.views.specExplorer && viewItem == change",
          "group": "7_modification"
        },
        {
          "command": "alma.prompts.run",
          "when": "view == alma.views.promptsExplorer && viewItem == prompt-runnable",
          "group": "inline"
        },
        {
          "command": "alma.prompts.rename",
          "when": "view == alma.views.promptsExplorer && (viewItem == prompt || viewItem == prompt-runnable)",
          "group": "7_modification@1"
        },
        {
          "command": "alma.prompts.delete",
          "when": "view == alma.views.promptsExplorer && (viewItem == prompt || viewItem == prompt-runnable)",
          "group": "7_modification@2"
        }
      ],
      "commandPalette": [
        {
          "command": "alma.spec.create"
        },
        {
          "command": "alma.steering.refresh"
        },
        {
          "command": "alma.prompts.create",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "alma.settings.openGlobalConfig"
        }
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@jest/globals": "^29.7.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.84.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "esbuild": "^0.23.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "ultracite": "^6.3.4",
    "vitest": "^3.2.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8"
  }
}
